{
  "name": "popsearch-v1",
  "version": "1.3.0-beta",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "start": "electron-vite dev",
    "build:ahk": "chcp 65001 > nul && \"C:\\Program Files\\AutoHotkey\\Compiler\\Ahk2Exe.exe\" /in .ahk/pop_search_trigger.ahk /out pop_search_trigger.exe && move /y .ahk\\pop_search_trigger.exe assets\\pop_search_trigger.exe",
    "clean": "rimraf dist out",
    "build": "npm run clean && npm run build:ahk && electron-vite build",
    "preview": "electron-vite preview",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "description": "A lightweight frameless search popup triggered by a global shortcut.",
  "author": "PopSearch",
  "homepage": "https://github.com/the-thinker/popsearch-v1",
  "devDependencies": {
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "electron-vite": "^5.0.0",
    "rimraf": "^6.1.2",
    "vite": "^7.3.1"
  },
  "build": {
    "appId": "com.popsearch.beta",
    "productName": "PopSearch Beta",
    "asar": true,
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "out/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PopSearch Beta"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    }
  },
  "dependencies": {
    "electron-log": "^5.4.3"
  }
}